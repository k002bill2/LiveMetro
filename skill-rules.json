{
  "react-native-development": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "React Native component development with TypeScript, hooks, and navigation",
    "promptTriggers": {
      "keywords": [
        "react native",
        "component",
        "screen",
        "navigation",
        "hooks",
        "useState",
        "useEffect",
        "expo",
        "UI",
        "layout"
      ],
      "intentPatterns": [
        "(create|add|build|make).*?(component|screen|page)",
        "(fix|update|modify).*?(UI|layout|style)",
        "(implement|add).*?(navigation|routing)",
        "use.*?(hook|context)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/components/**/*.tsx",
        "src/screens/**/*.tsx",
        "src/hooks/**/*.ts"
      ],
      "contentPatterns": [
        "import.*React",
        "export.*Component",
        "StyleSheet\\.create",
        "useNavigation"
      ]
    }
  },

  "firebase-integration": {
    "type": "domain",
    "enforcement": "require",
    "priority": "high",
    "description": "Firebase integration for auth, Firestore, and real-time data",
    "promptTriggers": {
      "keywords": [
        "firebase",
        "firestore",
        "authentication",
        "auth",
        "realtime",
        "database",
        "collection",
        "document"
      ],
      "intentPatterns": [
        "(add|create|setup).*?(firebase|firestore)",
        "(query|fetch|get).*?(firestore|database)",
        "(subscribe|listen).*?(realtime|updates)",
        ".*?authentication.*?"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/services/**/*.ts",
        "src/config/firebase*.ts"
      ],
      "contentPatterns": [
        "import.*firebase",
        "firestore\\(\\)",
        "collection\\(",
        "onSnapshot"
      ]
    }
  },

  "api-integration": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Seoul Open Data API integration for subway arrival data",
    "promptTriggers": {
      "keywords": [
        "API",
        "seoul",
        "subway",
        "arrival",
        "timetable",
        "fetch",
        "axios",
        "endpoint"
      ],
      "intentPatterns": [
        "(call|fetch|get).*?API",
        "(integrate|connect).*?(seoul|subway)",
        ".*?(arrival|timetable).*?data"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/services/api/**/*.ts"
      ],
      "contentPatterns": [
        "axios\\.",
        "fetch\\(",
        "seoulSubwayApi",
        "API_KEY"
      ]
    }
  },

  "location-services": {
    "type": "domain",
    "enforcement": "require",
    "priority": "critical",
    "description": "Location services, GPS, and geolocation features",
    "promptTriggers": {
      "keywords": [
        "location",
        "GPS",
        "geolocation",
        "coordinate",
        "latitude",
        "longitude",
        "nearby",
        "distance"
      ],
      "intentPatterns": [
        "(get|fetch|request).*?(location|position)",
        "(find|search).*?nearby",
        ".*?permission.*?location"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/hooks/useLocation*.ts",
        "src/services/**/*location*.ts"
      ],
      "contentPatterns": [
        "expo-location",
        "getCurrentPositionAsync",
        "requestForegroundPermissionsAsync"
      ]
    }
  },

  "notification-system": {
    "type": "domain",
    "enforcement": "require",
    "priority": "high",
    "description": "Push notifications and alert system",
    "promptTriggers": {
      "keywords": [
        "notification",
        "push",
        "alert",
        "reminder",
        "notify"
      ],
      "intentPatterns": [
        "(send|schedule|create).*?(notification|alert)",
        "(setup|configure).*?push",
        ".*?notification.*?permission"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/hooks/useNotifications*.ts",
        "src/services/**/*notification*.ts"
      ],
      "contentPatterns": [
        "expo-notifications",
        "scheduleNotificationAsync",
        "registerForPushNotificationsAsync"
      ]
    }
  },

  "data-caching": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "normal",
    "description": "Data caching with AsyncStorage and offline support",
    "promptTriggers": {
      "keywords": [
        "cache",
        "storage",
        "AsyncStorage",
        "persist",
        "offline"
      ],
      "intentPatterns": [
        "(save|store|cache).*?data",
        ".*?offline.*?support",
        "(persist|save).*?state"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/services/data/**/*.ts",
        "src/utils/cache*.ts"
      ],
      "contentPatterns": [
        "AsyncStorage",
        "setItem",
        "getItem"
      ]
    }
  },

  "performance-optimization": {
    "type": "guardrail",
    "enforcement": "suggest",
    "priority": "normal",
    "description": "Performance monitoring and optimization",
    "promptTriggers": {
      "keywords": [
        "performance",
        "optimize",
        "memoize",
        "useMemo",
        "useCallback",
        "lazy",
        "suspense"
      ],
      "intentPatterns": [
        "(optimize|improve).*?performance",
        "(reduce|minimize).*?(re-?render|bundle)",
        ".*?memoiz.*?"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/utils/performance*.ts",
        "src/services/monitoring/**/*.ts"
      ],
      "contentPatterns": [
        "React\\.memo",
        "useMemo",
        "useCallback",
        "monitoringManager"
      ]
    }
  },

  "security-check": {
    "type": "guardrail",
    "enforcement": "block",
    "priority": "critical",
    "description": "Security validation for sensitive operations",
    "promptTriggers": {
      "keywords": [
        ".env",
        "API_KEY",
        "SECRET",
        "password",
        "token",
        "credentials"
      ],
      "intentPatterns": [
        ".*?(modify|change|update).*?(\\.env|secret|key)",
        "(expose|share|commit).*?(credential|token)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        ".env*",
        "**/*secret*",
        "**/*credential*"
      ],
      "contentPatterns": [
        "API_KEY",
        "SECRET",
        "PASSWORD"
      ]
    }
  },

  "cc-feature-implementer-main": {
    "type": "workflow",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Creates phase-based feature plans with quality gates and incremental delivery structure",
    "promptTriggers": {
      "keywords": [
        "plan",
        "planning",
        "phases",
        "breakdown",
        "strategy",
        "roadmap",
        "organize",
        "structure",
        "outline",
        "feature plan",
        "implementation plan",
        "TDD",
        "test-driven"
      ],
      "intentPatterns": [
        "(create|make|generate).*?(plan|roadmap|strategy)",
        "(plan|organize|structure).*?(feature|implementation)",
        "(break.*?down|split).*?(task|feature|work)",
        ".*?phase.*?(breakdown|plan)",
        "how.*?(implement|build|create).*?feature",
        ".*?TDD.*?(plan|approach)",
        "need.*?(plan|strategy).*?for"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "docs/plans/**/*.md",
        "docs/planning/**/*.md",
        ".claude/skills/cc-feature-implementer-main/**/*"
      ],
      "contentPatterns": [
        "## Implementation Plan",
        "### Phase \\d+:",
        "Quality Gate",
        "Red-Green-Refactor",
        "TDD Compliance"
      ]
    }
  }
}
