{
	"mcpServers": {
		"chrome-devtools": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"chrome-devtools-mcp@latest"
			]
		},
		"testsprite": {
			"command": "npx",
			"args": [
				"-y",
				"@testsprite/testsprite-mcp@latest"
			],
			"env": {
				"TESTSPRITE_API_KEY": "${TESTSPRITE_API_KEY}"
			}
		}
	}
}
