rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Stations - public read, admin write
    match /stations/{stationId} {
      allow read: if true;
      allow write: if false;
    }

    // Subway lines - public read, admin write
    match /subwayLines/{lineId} {
      allow read: if true;
      allow write: if false;
    }

    // Trains - public read, admin write
    match /trains/{trainId} {
      allow read: if true;
      allow write: if false;
    }

    // Train delays - public read, admin write
    match /trainDelays/{delayId} {
      allow read: if true;
      allow write: if false;
    }

    // Congestion data - public read, admin write
    match /congestionData/{congestionId} {
      allow read: if true;
      allow write: if false;
    }

    // Favorites - authenticated users only for their own data
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
