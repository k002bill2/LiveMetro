  "hook-creator": {
    "type": "tool",
    "enforcement": "suggest",
    "priority": "normal",
    "promptTriggers": {
      "keywords": ["hook", "훅", "자동화", "automation", "이벤트"],
      "intentPatterns": [
        "(hook|훅).*?(만들|생성|create)",
        "(자동화|automation).*?(설정|configure)",
        "(PreToolUse|PostToolUse|Stop).*?hook"
      ]
